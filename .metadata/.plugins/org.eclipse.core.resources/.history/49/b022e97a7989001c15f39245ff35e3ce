package com.revature.course_reg.services;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

import com.revature.course_reg.models.Student;

public class StudentService {

	public boolean registerNewStudent(Student newStudent) {
		if(!isScientistValid(newStudent)) {
			throw new RuntimeException("Invalid user data provided");
		}
		
		File studentsFile = new File("src/resources/data.txt");
		
		//Try with resources
		try(FileWriter  fileWriter = new FileWriter(studentsFile, true); ){ // Include true to append the data
			fileWriter.write(newStudent.toFileString() + "\n");
		} catch (Exception e ) {
			e.printStackTrace();
			return false;
		}
	}
	
}
